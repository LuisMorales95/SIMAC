<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:ignore="VectorDrawableCompat, ContentDescription, HardcodedText,RtlHardcoded,LabelFor,Deprecated"
    tools:context="com.Mezda.SIMAC.Fragments.Fragment_AlertC">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="Generar Alerta"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/txttitalerta"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_editssignup"
                            android:ems="10"
                            android:hint="Titulo (necesario)"
                            android:inputType="textPersonName"
                            android:maxLength="45"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="8dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/SignUpText"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView12" />

                        <EditText
                            android:id="@+id/listdisc"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/round_editssignup"
                            android:gravity="top"
                            android:hint="Descripcion (necesario)"
                            android:inputType="text|textMultiLine"
                            android:maxLength="4000"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/SignUpText"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txttitalerta" />

                        <ImageButton
                            android:id="@+id/btnubicar"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:background="@drawable/roundcorners"
                            android:src="@drawable/ic_menu_location"
                            app:layout_constraintBottom_toBottomOf="@+id/alertatxtubicacion"
                            app:layout_constraintStart_toStartOf="@+id/listdisc"
                            app:layout_constraintTop_toTopOf="@+id/alertatxtubicacion" />

                        <TextView
                            android:id="@+id/alertatxtubicacion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_editssignup"
                            android:hint="Direccion"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/SignUpText"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/listdisc"
                            app:layout_constraintStart_toEndOf="@+id/btnubicar"
                            app:layout_constraintTop_toBottomOf="@+id/listdisc" />

                        <TextView
                            android:id="@+id/alert_longitud"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/round_editssignup"
                            android:gravity="center"
                            android:hint="Longitud"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/SignUpText"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/alertatxtubicacion" />

                        <TextView
                            android:id="@+id/alert_latitud"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/round_editssignup"
                            android:gravity="center"
                            android:hint="Latitud"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/SignUpText"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/alert_longitud" />

                        <ImageView
                            android:id="@+id/imgfoto"
                            android:layout_width="0dp"
                            android:layout_height="280dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_editssignup"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/SignUpText"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/listdisc"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/alert_latitud" />

                        <ImageButton
                            android:id="@+id/alertgallery"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/roundcorners"
                            android:src="@drawable/ic_menu_gallery"
                            app:layout_constraintBottom_toBottomOf="@+id/imgfoto"
                            app:layout_constraintEnd_toStartOf="@+id/alertcamara" />

                        <ImageButton
                            android:id="@+id/alertcamara"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/roundcorners"
                            android:src="@drawable/ic_menu_camarapersonal"
                            app:layout_constraintBottom_toBottomOf="@+id/imgfoto"
                            app:layout_constraintEnd_toEndOf="@+id/imgfoto" />

                        <ImageButton
                            android:id="@+id/btnenviaraviso"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/roundcorners"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/imgfoto"
                            app:layout_constraintStart_toStartOf="@+id/imgfoto"
                            app:layout_constraintTop_toBottomOf="@+id/imgfoto"
                            app:srcCompat="@drawable/ic_menu_upload" />

                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
