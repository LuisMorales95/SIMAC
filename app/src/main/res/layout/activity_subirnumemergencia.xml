<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subirnumerooutside"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Mezda.SIMAC.mvp_view.Activitys.Activity_SubirNumEmergencia">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="8dp"
                android:text="Agregar Numero"
                android:textColor="@color/TextInPrimary"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/AgregarNumero_Nombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_editssignup"
                android:ems="10"
                android:hint="Nombre (necesario)"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <EditText
                android:id="@+id/AgregarNumero_Telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_editssignup"
                android:ems="10"
                android:hint="Telefono (necesario)"
                android:inputType="phone"
                android:maxLength="20"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AgregarNumero_Nombre" />

            <EditText
                android:id="@+id/AgregarNumero_Extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_editssignup"
                android:ems="10"
                android:hint="ExtensiÃ³n (opcional)"
                android:inputType="phone"
                android:maxLength="5"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AgregarNumero_Telefono" />

            <ImageView
                android:id="@+id/AgregarNumero_Imagen"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/shadow"
                app:layout_constraintBottom_toBottomOf="@+id/Enviar_NumeroEmergenica"
                app:layout_constraintEnd_toEndOf="@+id/AgregarNumero_Nombre"
                app:layout_constraintStart_toEndOf="@+id/AgregarNumero_Extension"
                app:layout_constraintTop_toBottomOf="@+id/AgregarNumero_Nombre" />

            <Button
                android:id="@+id/Enviar_NumeroEmergenica"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/roundcorners"
                android:text="Enviar"
                android:textColor="@color/TextInPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/AgregarNumero_Extension"
                app:layout_constraintStart_toStartOf="@+id/AgregarNumero_Extension"
                app:layout_constraintTop_toBottomOf="@+id/AgregarNumero_Extension" />

            <ImageButton
                android:id="@+id/AgregarImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/AgregarNumero_Imagen"
                app:layout_constraintEnd_toEndOf="@+id/AgregarNumero_Imagen"
                app:srcCompat="@drawable/ic_menu_camera" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>