<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:foregroundGravity="center_horizontal"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbars="none"
    tools:context="com.Mezda.SIMAC.pending.Activities.Activity_Registrar"
    tools:ignore="VectorDrawableCompat, ContentDescription, HardcodedText,RtlHardcoded,LabelFor,Deprecated">

    <!--<HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:ignore="VectorDrawableCompat">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center_horizontal">

                <TextView
                    android:id="@+id/Signuptitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="Sign Up"
                    android:textColor="@color/TextInPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/backtologin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="7dp"
                    app:layout_constraintBottom_toBottomOf="@+id/Signuptitulo"
                    app:layout_constraintEnd_toEndOf="@+id/nombreimagen"
                    app:layout_constraintStart_toStartOf="@+id/Signuptitulo"
                    app:layout_constraintTop_toTopOf="@+id/Signuptitulo"
                    app:srcCompat="@drawable/ic_menu_arrowleft" />

                <View
                    android:id="@+id/viewprincipal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/campoNombre" />


                <View
                    android:id="@+id/campoNombre"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/viewprincipal"
                    app:layout_constraintStart_toStartOf="@+id/viewprincipal"
                    app:layout_constraintTop_toBottomOf="@+id/Signuptitulo" />

                <ImageView
                    android:id="@+id/nombreimagen"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editnombre"
                    app:layout_constraintEnd_toStartOf="@+id/editnombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/editnombre"
                    app:srcCompat="@drawable/ic_menu_accountsignup"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/editnombre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_editssignup"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/SignUpText"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/campoNombre"
                    app:layout_constraintEnd_toEndOf="@+id/campoNombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/campoNombre" />

                <View
                    android:id="@+id/campoApellido"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/viewprincipal"
                    app:layout_constraintStart_toStartOf="@+id/viewprincipal"
                    app:layout_constraintTop_toBottomOf="@+id/campoNombre" />

                <ImageView
                    android:id="@+id/Apellidoimagen"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editApellido"
                    app:layout_constraintEnd_toStartOf="@+id/editnombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/editApellido"
                    app:srcCompat="@drawable/ic_menu_apellido"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/editApellido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_editssignup"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/SignUpText"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/campoApellido"
                    app:layout_constraintEnd_toEndOf="@+id/campoNombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/campoApellido" />

                <View
                    android:id="@+id/campoFechaSexo"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/viewprincipal"
                    app:layout_constraintStart_toStartOf="@+id/viewprincipal"
                    app:layout_constraintTop_toBottomOf="@+id/campoApellido" />

                <ImageView
                    android:id="@+id/fechaimagen"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editFecha"
                    app:layout_constraintEnd_toStartOf="@+id/editnombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/editFecha"
                    app:srcCompat="@drawable/ic_menu_calendar"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/editFecha"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_editssignup"

                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="dd/mm/aaaa"
                    android:inputType="textPersonName"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/SignUpText"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/campoFechaSexo"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/campoFechaSexo" />

                <ImageView
                    android:id="@+id/buttoncambiargenero"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/ic_button_change"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/Sexoimagen"
                    app:layout_constraintEnd_toEndOf="@+id/editCorreoVerify"
                    app:layout_constraintTop_toTopOf="@+id/Sexoimagen"
                    app:srcCompat="@drawable/ic_menu_gender" />

                <ImageView
                    android:id="@+id/Sexoimagen"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editFecha"
                    app:layout_constraintEnd_toStartOf="@+id/buttoncambiargenero"
                    app:layout_constraintTop_toTopOf="@+id/editFecha"
                    app:srcCompat="@drawable/ic_gender_male" />

                <View
                    android:id="@+id/campodireccion"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/viewprincipal"
                    app:layout_constraintStart_toStartOf="@+id/viewprincipal"
                    app:layout_constraintTop_toBottomOf="@+id/campoFechaSexo" />

                <ImageView
                    android:id="@+id/imagedirecion"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editDireccion"
                    app:layout_constraintEnd_toEndOf="@+id/fechaimagen"
                    app:layout_constraintStart_toStartOf="@+id/fechaimagen"
                    app:layout_constraintTop_toTopOf="@+id/editDireccion"
                    app:srcCompat="@drawable/ic_menu_home" />

                <EditText
                    android:id="@+id/editDireccion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_editssignup"
                    android:ems="10"
                    android:hint="Direccion"
                    android:inputType="text"
                    android:maxLength="50"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/SignUpText"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/campodireccion"
                    app:layout_constraintStart_toEndOf="@+id/imagedirecion"
                    app:layout_constraintTop_toTopOf="@+id/campodireccion" />

                <EditText
                    android:id="@+id/editDireccionNumExt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_editssignup"
                    android:ems="10"
                    android:hint="#Ext"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/SignUpText"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/imagedirecion"
                    app:layout_constraintTop_toBottomOf="@+id/editDireccion" />

                <View
                    android:id="@+id/view10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/round_editssignup"
                    app:layout_constraintBottom_toBottomOf="@+id/editDireccionNumExt"
                    app:layout_constraintEnd_toEndOf="@+id/editDireccion"
                    app:layout_constraintStart_toEndOf="@+id/editDireccionNumExt"
                    app:layout_constraintTop_toTopOf="@+id/editDireccionNumExt" />

                <ImageView
                    android:id="@+id/imagedirrecionarrowdown"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view10"
                    app:layout_constraintEnd_toEndOf="@+id/view10"
                    app:layout_constraintTop_toTopOf="@+id/view10"
                    app:srcCompat="@drawable/ic_menu_arrowdown" />

                <Spinner
                    android:id="@+id/colonia"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/transparent"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view10"
                    app:layout_constraintEnd_toEndOf="@+id/view10"
                    app:layout_constraintStart_toStartOf="@+id/view10"
                    app:layout_constraintTop_toTopOf="@+id/view10" />

                <View
                    android:id="@+id/campoCorreo"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/viewprincipal"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/viewprincipal"
                    app:layout_constraintTop_toBottomOf="@+id/campodireccion" />

                <ImageView
                    android:id="@+id/correoimagen"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editCorreo"
                    app:layout_constraintEnd_toStartOf="@+id/editnombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/editCorreo"
                    app:srcCompat="@drawable/ic_menu_email"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/editCorreo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_editssignup"
                    android:ems="10"
                    android:hint="Correo"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/SignUpText"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/campoCorreo"
                    app:layout_constraintEnd_toEndOf="@+id/campoNombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/campoCorreo" />

                <View
                    android:id="@+id/campoCorreoVerify"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/viewprincipal"
                    app:layout_constraintStart_toStartOf="@+id/viewprincipal"
                    app:layout_constraintTop_toBottomOf="@+id/campoCorreo" />

                <ImageView
                    android:id="@+id/CorrioVerifyimagen"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editCorreoVerify"
                    app:layout_constraintEnd_toStartOf="@+id/editnombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/editCorreoVerify"
                    app:srcCompat="@drawable/ic_menu_verifyemail"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/editCorreoVerify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/round_editssignup"
                    android:ems="10"
                    android:hint="Verificar Correo"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/SignUpText"
                    android:textSize="14sp"

                    app:layout_constraintBottom_toBottomOf="@+id/campoCorreoVerify"
                    app:layout_constraintEnd_toEndOf="@+id/campoNombre"
                    app:layout_constraintStart_toStartOf="@+id/campoNombre"
                    app:layout_constraintTop_toTopOf="@+id/campoCorreoVerify" />

                <View
                    android:id="@+id/campobuttonenviar"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/viewprincipal"
                    app:layout_constraintStart_toStartOf="@+id/viewprincipal"
                    app:layout_constraintTop_toBottomOf="@+id/campoCorreoVerify" />

                <ImageButton
                    android:id="@+id/enviar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/ic_button_change"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/campobuttonenviar"
                    app:layout_constraintEnd_toEndOf="@+id/campobuttonenviar"
                    app:layout_constraintStart_toStartOf="@+id/campobuttonenviar"
                    app:layout_constraintTop_toTopOf="@+id/campobuttonenviar"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/ic_menu_upload" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/enviar">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/view9"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/colorPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Todos los campos son requeridos"
                            android:textColor="@android:color/background_light"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/view9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/view9" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
    <!--  </HorizontalScrollView>
  -->

</ScrollView>